@model  BlackCoderInvite4PartyApp.Models.GuestResponse
@{
    Layout = null;
}
    
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Invite4Party</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
</head>
<body>
    <div class="panel-success"></div>
    <div class="panel-heading text-center"><h4>BlackCoderInvite4PartyApp</h4></div>
    <div class="panel-body">
        <form class="p-a-1" asp-action="Invite4Party" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <p>
                    <label asp-for="Nickname">Your nick:</label>
                    <input class="form-control" asp-for="Nickname" />
                </p>
            </div>
            <div class="form-group">
                <p>
                    <label asp-for="Fancymail">Fancy mail:</label>
                    <input class="form-control" asp-for="Fancymail" />
                </p>
            </div>
            <div class="form-group">
                <p>
                    <label asp-for="FavouriteAnimal">Favourite animal:</label>
                    <input class="form-control" asp-for="FavouriteAnimal" />
                </p>
            </div>
            <div class="form-group">
                <p>
                <label>Will you attend?</label>
                    <select asp-for="WillAttend">
                        <option value="">Choose an option</option>
                        <option value="true">Yes, I will attend!</option>
                        <option value="false">No, I will not come.</option>
                    </select>
                </p>
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Submit Your Decision</button>
            </div>
        </form>
    </div>
</body>
</html>